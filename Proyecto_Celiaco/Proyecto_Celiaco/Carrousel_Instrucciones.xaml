<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Proyecto_Celiaco.card_recetas"
             x:Class="Proyecto_Celiaco.Carrousel_Instrucciones">
    <ContentPage.Content>
        
            <StackLayout>
                <ScrollView>
                    <ListView ItemsSource = "{Binding  instrucciones}" Rotation="270"  HasUnevenRows="True"  x:Name="lv_lista" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                <local:carrousel/>
                            </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </ScrollView>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>