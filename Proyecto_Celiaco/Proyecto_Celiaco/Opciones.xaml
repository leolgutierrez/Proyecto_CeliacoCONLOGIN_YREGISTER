<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Celiaco.Opciones"
             IconImageSource="opc.png">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,10" Padding="10,10,10,10">
            <Label Text="¡Bienvenido a la app de cocina!"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" FontSize="Title"/>
            <Label Text="EYYY BIENVENIDO" x:Name="labelnomusuario" HorizontalOptions="CenterAndExpand"  FontSize="Large" IsVisible="false"/>
            <Label Text="Pruebe a iniciar sesion!" x:Name="labelpruebe"  HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            <Button Text="Iniciar Sesión" x:Name="btniniciarsesion" BackgroundColor="LightBlue" VerticalOptions="CenterAndExpand" WidthRequest="60" Clicked="btniniciarsesion_Clicked"/>
            <Button Text="Cerrar Sesion" x:Name="btncerrarsession" BackgroundColor="LightBlue" VerticalOptions="CenterAndExpand" WidthRequest="60" Clicked="btncerrarsession_Clicked" IsVisible="false" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>