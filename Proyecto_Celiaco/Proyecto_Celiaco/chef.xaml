<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Celiaco.chef"
             IconImageSource="chef.png">
    <ContentPage.Content>
        <StackLayout Spacing="60" Margin="10,10,10,10">
            <Label Text="¿Preparado para cocinar?" FontSize="Title" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
            <Button BackgroundColor="LightBlue" Text="¡Estoy Listo!" HorizontalOptions="Fill" WidthRequest="60" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>